<div class="container">
  <div class="content">
    <h1 id="title">Task List</h1>

    <% @tasks.each do |task| %>
      <% if task.completed == true %>
        <h2 class="task-name"><%= link_to task.title, task_path(task) %></h2>
      <% end %>
    <% end %>

    <%= link_to "Back to list", tasks_path, class: "link" %>
  </div>
</div>
