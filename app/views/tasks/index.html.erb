<div class="container">
  <h1 id="title">Task List</h1>

  <div class="buttons-container">
    <%= link_to "Create new task", new_task_path, class: "link" %>
    <%= link_to "Show completed", tasks_completed_path, class: "link" %>
  </div>

  <div class="content">

    <% @tasks.each do |task| %>
    <div class="head-bin">
      <h2 class="task-name"><%= link_to task.title, task_path(task) %></h2>

      <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure? This cannot be undone" } do %>
      <i class="fas fa-trash-alt bin"></i>
      <% end %>

    </div>



      <p><strong>Completed?</strong> <%= task.completed ? '✅' : '❌' %></p>
    <% end %>
  </div>

</div>

